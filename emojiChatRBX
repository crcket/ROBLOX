repeat task.wait() until game:IsLoaded() and game.Chat and game.ReplicatedStorage and game.ReplicatedFirst
local emojis = {
	["ğŸ¤£"] = {"lol","xd","rofl","lmao","lmfao"},
	["ğŸ˜€"] = {":d"},
	["ğŸ˜¥"] = {";("},
